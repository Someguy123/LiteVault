<div class="logged_header main_header single">
    <h1>
        <span class="pull-right ltc-balance hidden-xs" id="ltc-balance">0.00</span>
    </h1>

    <div class="container">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li><a href="#home" role="tab" data-toggle="tab">Home</a></li>
            <li><a href="#tab_transactions" role="tab" data-toggle="tab">Transactions</a></li>
            <li><a href="#tab_send_coins" role="tab" data-toggle="tab">Send</a></li>
            <li class="active"><a href="#tab_addresses" role="tab" data-toggle="tab">Receive (manage addresses)</a></li>
            <li><a href="#tab_import_export" role="tab" data-toggle="tab">Import/Export</a></li>
            <li><a href="#tab_settings" role="tab" data-toggle="tab">Settings</a></li>
        </ul>
    </div>
</div>
<div class="container">
    <br><br>
    <div class="row">
        <div class="col-xs-12" id="alerts-section">

        </div>
    </div>
    <!-- Tab panes -->
    <div class="tab-content">
        <div class="tab-pane" id="home">...</div>
        <div class="tab-pane" id="tab_transactions">
            <h4>Your Transactions</h4>

            <table id="list-transactions-outer" class="table table-bordered">
                <thead>
                <th>Date</th>
                <th>Amount</th>
                <th>Your Address</th>
                <th>Confirmations</th>
                <th>View</th>
                </thead>
                <tbody id="list-transactions">
                    <tr><td colspan="5">Error loading transactions?</td></tr>
                </tbody>
            </table>
        </div>
        <div class="tab-pane active" id="tab_addresses">

            <table id="list-addresses-outer" class="table table-bordered">
                <thead>
                <th>Address</th>
                <th>Balance</th>
                <th>Options</th>
                <th>Delete?</th>
                </thead>
                <tbody id="list-addresses">
                    <tr><td colspan="4">Error loading addresses?</td></tr>
                </tbody>
            </table>

            <button id="generate-btn" class="btn btn-default">Generate New Address</button>
        </div>
        <div class="tab-pane" id="tab_send_coins">
            <div class="row">
                <div class="col-md-6">
                    <div class="alert alert-danger">Note: You will get an error if you try to send
                    multiple transactions in a short period of time. This is because you cannot send
                    unconfirmed coins yet.</div>

                    <div class="well">
                        This service is not ran as a business and relies on the community to keep it alive. If you use the service, please
                        donate, even just $1 in Litecoins contribute towards development time, and server costs.<br/>
                        <br/>
                        Donate to Litevault to keep us running: <br/><br/>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">Litecoin</h4>
                            </div>
                            <div class="panel-body">
                                LNWEjx3DKSAWKX5fkWfCwa2tWSQeo7ZmnR
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">Bitcoin</h4>
                            </div>
                            <div class="panel-body">
                                17PPTHmS8N34KYKdDc4Gn1psabteGS8EE3
                            </div>
                        </div>
                    </div>
                    <h4>Exchange Rates</h4>
                    <ul id="exchange-rates">
                        <li>Under Construction</li>
                    </ul>
                </div>

                <div class="col-md-6">
                    <h4>Send LTC</h4>
                    <div class="input-group-lg">
                        <label for="from-address">From Address</label>
                        <select name="my-addresses" id="select-my-addresses" class="form-control"></select>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <div class="input-group form-inline">
                                <label for="to-address">Recipient Address</label>
                                <input type="text" class="form-control" id="to-address"/>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group form-inline">
                                <label for="to-address">Amount to send</label>
                                <input type="text" class="form-control" id="send-coins-amount" placeholder="0.0000"/>
                            </div>
                        </div>
                    </div>

                    <hr/>
                    <button class="btn btn-default" id="send-coins-btn">Send Coins</button>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="tab_import_export">
            <div class="row">
                <div class="col-md-6 form-inline">
                    <h4>Import</h4>
                    <div class="input-group">
                        <p class="form-control-static">Import Key (WIF)</p>
                    </div>
                    <div class="input-group">
                        <input type="text" class="form-control" id="import-address" />
                    </div>
                    <button class="btn btn-default" id="import-btn">Import</button>
                </div>
                <div class="col-md-9">
                    <h4>Export</h4>
                    <a href="javascript:void(0);" id="export-wallet-json-link">Export Wallet (JSON)</a>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="tab_settings">
            <h3>Security</h3>
            <div class="row">
                <div class="col-md-6 form-inline">
                    <label for="account-email">Your Email (optional): </label>
                    <input type="text" id="account-email" class="form-control"/>
                    <button class="btn btn-default" id="save-email">Save Email</button>
                </div>
            </div>
            <hr/>
            <h4>2-Factor Authentication</h4>
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <strong>2-Factor Authentication Status: <strong id="2fa-status" style="color:red">Disabled</strong></strong>
                    <button class="btn btn-default" id="configure-gauth">Enable/Modify 2-Factor Authentication</button>

                </div>
                <div class="col-xs-12 col-md-6">
                    <div class="well">
                    <p>NOTE: This is a beta feature. Please make sure you backup your wallet often when using 2-Factor authentication.
                            If you find any bugs with 2-Factor authentication, please report them to
                            <a href="mailto:info+security@someguy123.com">info+security@someguy123.com</a> </p>
                        <p>If you have 2-Factor authentication enabled, the button "Enable/Modify" will also allow you to replace it
                            with a new 2-Factor token, for example if you reset or get a new phone.</p>
                        <p>If you would like to disable 2-Factor authentication, please contact support</p>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteAddressModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Deleting Address</h4>
                </div>
                <div class="modal-body">
                    <h3>Warning: You're deleting an address!</h3>
                    <h4 style="color:#ff0000">This action is irreversible, please make sure you're absolutely sure
                        you want to do this, the private key will be removed from your account and you will lose
                        access to any funds stored in this address unless you have a backup of the private key somewhere.</h4>
                    <p>The address you are deleting is <strong id="deletingAddress"></strong></p>
                </div>
                <div class="modal-footer">
                    <button type="button" id="i-am-sure-delete" class="btn btn-danger" data-dismiss="modal">I'm sure I want to delete this address</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="exportWalletModal" tabindex="-1" role="dialog" aria-labelledby="exportWalletModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="exportWalletModalLabel">Exporting Wallet</h4>
                </div>
                <div class="modal-body">
                    <textarea id="wallet-exported-txt" class="form-control" cols="20" rows="30" style="height: 300px;"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Done</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="configGauthModal" tabindex="-1" role="dialog" aria-labelledby="configGauthModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="configGauthModalLabel">Setting up Google Authenticator (or other TOTP
                        app)</h4>
                </div>
                <div class="modal-body">
                    <p style="color: red"><strong>IMPORTANT, READ BEFORE CONTINUING: </strong> Please make sure that you
                    have an email set in your account settings. If you don't have one and you lose access to your 2FA app for
                    any reason, you won't be able to get back into your account.</p>
                    <div class="qrcode_container text-center" id="modal-gauth-qr">

                    </div>
                    <p>Manual key entry: <strong id="modal-gauth-secret"></strong></p>
                    <p>To enable 2 Factor Authentication, scan the QR code above into your favourite authenticator app
                    such as <strong>Google Authenticator</strong> or <strong>Authy</strong>. Once done, enter the access
                    token you get from the app into the text box below, it looks like <strong>123456</strong>.</p>
                    <label for="modal-gauth-token">Your 2FA token from the app:</label>
                    <input type="text" class="form-control" id="modal-gauth-token" placeholder="e.g. 123456"/>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" id="confirm-setup-2fa">Set Up 2FA</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="completeGauthModal" tabindex="-1" role="dialog" aria-labelledby="completeGauthModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="completeGauthModalLabel">You have successfully enabled 2FA for your
                        account.</h4>
                </div>
                <div class="modal-body">
                    <p>You've just enabled 2FA for your account. </p>
                    <p>Please be aware that from now on you will be required to
                    enter a token from your 2FA application approximately once a week for security, where-as untrusted computers
                    will be de-authorized within 2 hours. </p>
                    <p>If you decide that you don't want 2FA, or run into a problem with the
                    application, you will be able to disable it from this computer using your password for the next week, without
                    being required to enter a 2FA token.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Okay</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="txModal" tabindex="-1" role="dialog" aria-labelledby="txModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="txModalLabel">Transaction Sent</h4>
                </div>
                <div class="modal-body">
                    Transaction ID: <p id="txModalTXID">ERROR</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="privkeyModal" tabindex="-1" role="dialog" aria-labelledby="privkeyModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="privkeyModalLabel">Your Private Key</h4>
                </div>
                <div class="modal-body">
                    <input type="text" disabled="disabled" value="" class="form-control" id="privkey-showtext"/>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="signMessageModal" tabindex="-1" role="dialog" aria-labelledby="signMessageModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="signMessageModalLabel">Sign Message</h4>
                </div>
                <div class="modal-body">
                    <p>Address: <strong id="signmessage-address"></strong></p>
                    <label for="sign-message"></label>
                    <textarea id="sign-message" class="form-control" cols="30" rows="5"></textarea><br/>
                    <label for="signed-message">Signed Message</label>
                    <textarea id="signed-message" class="form-control" cols="30" rows="5" disabled="disabled"></textarea><br/>
                    <button class="btn btn-success" id="sign-message-btn">Sign Message</button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="qrcodeModal" tabindex="-1" role="dialog" aria-labelledby="qrcodeModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="qrcodeModalLabel">QR Code</h4>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <img src="" id="qrcode-img" alt="" width="200" height="200"/><br/>
                        <strong id="qrcode-address"></strong>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

</div>